{
  "compilerOptions": {
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2015",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./dist/extensions",
    "rootDir": "extensions"
  },
  "include": [
    "extensions"
  ],
  "exclude": [
    "src",
    "e2e",
    "fixtures"
  ]
}
